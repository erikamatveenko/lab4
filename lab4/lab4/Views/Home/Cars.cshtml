@model lab4.Models.CarViewModel
@{
    ViewData["Title"] = "Cars";
}
<style type="text/css">
    th, td {
        padding-right: 15px;
    }
</style>
<table style="margin:20px;">
    <caption>Автомобили</caption>
    <tr>
        <th>Код автомобиля</th>
        <th>Название бренда</th>
        <th>Владелец</th>
        <th>Регистрационный номер</th>
        <th>Год</th>
        <th>Дата регистрации</th>
        <th></th>
    </tr>
    @foreach (var car in Model.Cars)
            {
        <tr>
            <td>@car.CarID</td>
            <td>@car.Brand.BrandName</td>
            <td>@car.Owner.OwnerName</td>
            <td>@car.CarRegistrationNumber</td>
            <td>@car.CarReleaseDate</td>
            <td>@car.CarRegistrationDate</td>
            <td><a href="~/Home/Edit/@car.CarID">Редактировать</a></td>
        </tr>
    }
</table>


